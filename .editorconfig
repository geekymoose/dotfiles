# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
indent_size = 4
indent_style = space
end_of_line = lf
insert_final_newline = true
charset = utf-8

[Makefile]
indent_style = tab

[*.md]
indent_size = 2
indent_style = space

[*.json]
indent_size = 2
indent_style = space

[*.py]
indent_size = 4
indent_style = tab


