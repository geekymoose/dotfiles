! General
urxvt.title: urxvt terminal

! Disable all perl extension (If needed to be faster)
! urxvt.perl-ext:
! urxvt.perl-ext-common:

! All perl extensions
urxvt.perl-ext-common:      default,matcher,tabbed,font-size

! Theme
urxvt.background:           #0f0f0f
urxvt.foreground:           #c8c8c8
! urxvt.background:           Black
! urxvt.foreground:           White
urxvt.letterSpace:          -1
urxvt.transparent:          true
urxvt.shading:              5

! ScrollBar
urxvt.scrollBar:            false
urxvt.scrollBar_right:      false
urxvt.scrollBar_floating:   false
urxvt.scrollstyle:          rxvt
urxvt.scrollTtyOutput:      false
urxvt.scrollWithBuffer:     true

! Fonts
urxvt.font:                 xft:Source\ Code\ Pro\ for\ Powerline:size=10
urxvt.boldFont:             xft:Source\ Code\ Pro\ for\ Powerline:size=10:bold
Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight
Xft.autohint:               false
Xft.lcdfilter:              lcddefault

! Font re-size
urxvt.keysym.C-Up:          perl:font-size:increase
urxvt.keysym.C-Down:        perl:font-size:decrease
urxvt.keysym.C-S-Up:        perl:font-size:incglobal
urxvt.keysym.C-S-Down:      perl:font-size:decglobal
urxvt.font-size.step:       1

! Clickable links
! urxvt.perl-ext-common:    default,matcher
urxvt.url-launcher:         /usr/bin/xdg-open
urxvt.matcher.button:       1
urxvt.keysym.C-Delete:      perl:matcher:last
urxvt.keysym.M-Delete:      perl:matcher:list
urxvt.matcher.rend.0:       Uline Bold fg5

! Tabs
! urxvt.perl-ext-common:    tabbed
urxvt.tabbed.tabbar-fg:     2
urxvt.tabbed.tabbar-bg:     0
urxvt.tabbed.tab-fg:        3
urxvt.tabbed.tab-bg:        0

! Colors theme
#include "./theme-current.conf"
