configuration {
    font: "NotoSans 14";
    icon-theme: "Papirus";
    show-icons: true;
    modes: "drun,run,window,ssh";

    timeout {
        action: "kb-cancel";
        delay:  0;
    }

    filebrowser {
        directories-first: true;
        sorting-method:    "name";
    }
}

@theme "solarized"

