// Zed settings
// See https://zed.dev/docs/configuring-zed
// Run `zed: open default settings` to check the default values

{
  "agent": {
    "dock": "bottom",
    "default_model": {
      "provider": "lmstudio",
      "model": "qwen2.5-coder-7b-instruct",
    },
    "model_parameters": [],
  },
  "base_keymap": "VSCode",
  "vim_mode": true,
  "theme": {
    "mode": "dark",
    "light": "Gruvbox Light",
    "dark": "VSCode Dark Modern",
  },
  "icon_theme": {
    "mode": "dark",
    "light": "Colored Zed Icons Theme Dark",
    "dark": "Colored Zed Icons Theme Dark",
  },
  "buffer_font_family": "CaskaydiaMono Nerd Font Mono",
  "buffer_font_size": 16,
  "ui_font_family": "CaskaydiaMono Nerd Font Mono",
  "ui_font_size": 16,
  "show_whitespaces": "boundary",
  "minimap": {
    "show": "always",
  },
  "collaboration_panel": {
    "dock": "right",
  },
  "outline_panel": {
    "dock": "right",
  },
  "project_panel": {
    "hide_gitignore": true,
  },
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": false,
    "show_parameter_hints": false,
    "show_value_hints": false,
    "show_other_hints": false,
  },
  "edit_predictions": {
    "mode": "subtle",
    "enabled_in_text_threads": false,
  },
}
