// Zed settings
// See https://zed.dev/docs/configuring-zed
// Run `zed: open default settings` to check the default values

{
  // Keymap
  "base_keymap": "VSCode",
  "vim_mode": true,

  // Theme
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "One Dark",
  },
  "icon_theme": {
    "mode": "dark",
    "light": "Colored Zed Icons Theme Dark",
    "dark": "Colored Zed Icons Theme Dark",
  },
  "buffer_font_family": "CaskaydiaMono Nerd Font Mono",
  "buffer_font_size": 16,
  "ui_font_family": "CaskaydiaMono Nerd Font Mono",
  "ui_font_size": 16,
  "show_whitespaces": "boundary",
  "minimap": {
    "show": "never",
  },

  // Git
  "diff_view_style": "unified",
  "git_panel": {
    "sort_by_path": true,
    "tree_view": true,
  },

  // Panels
  "collaboration_panel": {
    "dock": "right",
  },
  "outline_panel": {
    "dock": "right",
  },
  "project_panel": {
    "hide_gitignore": true,
  },

  // Help
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": false,
    "show_parameter_hints": false,
    "show_value_hints": false,
    "show_other_hints": false,
  },

  // AI Prediction
  "edit_predictions": {
    "mode": "subtle",
    "enabled_in_text_threads": false,
  },

  // AI Agents
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "Mammouth AI",
      "model": "claude-sonnet-4-5",
    },
    "favorite_models": [],
    "model_parameters": [],
  },
  "language_models": {
    "openai_compatible": {
      "Mammouth AI": {
        "api_url": "https://api.mammouth.ai/v1",
        "available_models": [
          {
            "name": "claude-opus-4-5",
            "display_name": "Claude Opus 4.5",
            "max_tokens": 32768,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": false,
              "prompt_cache_key": false,
            },
          },
          {
            "name": "claude-sonnet-4-5",
            "display_name": "Claude Sonnet 4.5",
            "max_tokens": 32768,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": false,
              "prompt_cache_key": false,
            },
          },
          {
            "name": "claude-haiku-4-5",
            "display_name": "Claude Haiku 4.5",
            "max_tokens": 32768,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": false,
              "prompt_cache_key": false,
            },
          },
        ],
      },
    },
  },
}
